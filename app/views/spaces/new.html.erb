<div class="container mt-3 mb-5">
  <div class="mt-1 d-flex justify-content-between align-items-center">
    <h3 class="text-left ml-5">Add your space</h3>
    <%= link_to "Browse all spaces", spaces_path, class: "btn btn-success" %>
  </div>
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="form-login text-dark mt-3 mb-3">
        <%= simple_form_for @space do |f| %>
          <%= f.input :name %>
          <%= f.input :description %>
          <%= f.input :address %>
          <%= f.input :max_capacity %>
          <%= f.input :price_per_day %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.submit "Submit", class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
