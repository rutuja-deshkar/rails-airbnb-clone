<div class="container">
  <h1>Booking History for <strong><%= @space.name %></strong></h1>
  <% if @bookings.any? %>
    <% @bookings.each do |booking| %>
      <div class="index">
        <p>User:<%= "#{@space.user.first_name.capitalize}  #{@space.user.last_name.capitalize}" %></p>
        <h4>From: <strong><%= booking.start_date %></strong> To: <strong><%= booking.end_date %></strong></h4>
        </br>
        <div class="btn btn-default margin-bot">
          <%= link_to 'Back to space', space_path(@space), class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  <% else %>
    <p>Sorry, there's no booking for this space.</p>
  <% end %>
</div>
