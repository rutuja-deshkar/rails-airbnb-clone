<div class="container mt-3 mb-5">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="form-login text-dark mt-3 mb-3 mx-n3">
        <%= simple_form_for [space, booking] do |f| %>
          <%= f.input :number_of_persons, collection: 1..60, selected: params[:spaces][:guests].to_i %>
          <%= f.input :start_date, as: :string, input_html: {value: params[:spaces][:start_date], class: "datepicker"} %>
          <%= f.input :end_date, as: :string, input_html: {value: params[:spaces][:end_date], class: "datepicker"} %>
          <%= f.submit "Book this space", class: "btn-submit bg-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
