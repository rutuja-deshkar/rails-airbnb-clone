<div class="container mt-3 mb-5">
  <div class="mt-1 d-flex justify-content-between align-items-center">
    <h3 class="text-left ml-5">Edit your booking</h3>
    <%= link_to "Back to profile", profile_path, class: "btn btn-success" %>
  </div>
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="form-login text-dark mt-3 mb-3">
        <%= simple_form_for @booking do |f| %>
        <%= f.input :number_of_persons %>
        <%= f.input :start_date, as: :string, input_html: {class: "datepicker"} %>
        <%= f.input :end_date, as: :string, input_html: {class: "datepicker"} %>
        <%= f.submit "Update", class: "btn-submit bg-success" %>
      <% end %>
      </div>
    </div>
  </div>
</div>
